<% include ../partials/header %>

<div class="container">
   <div class="row">
      <h1 style="text-align: center;"> Create a New Campground</h1>
   <div style="width: 30%; margin: 30px auto;">
   <form action="/campgrounds" method="post">
      <div class="form-group">
         <input class="form-control" type="text" placeholder="Campsite Name" name="name">
      </div>
      <div class="form-group">
         <input class="form-control" type="number" placeholder="Campsite Price" name="price" min="0.01" step="0.01">
      </div>
      <div class="form-group">
         <input class="form-control" type="text" placeholder="Image Url" name="image">
      </div>
       <div class="form-group">
         <input class="form-control" type="text" placeholder="Description" name="description">
      </div>
      <div class="form-group">
         <label for="location">Location</label>
         <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
      </div>
      <div class="form-group">
         <button class="btn btn-lg btn-primary btn-block">Submit!</button>
      </div>
   </form>
   <a href="/campgrounds">Go Back</a>
   </div>
      
   </div>
</div>
<% include ../partials/footer %>